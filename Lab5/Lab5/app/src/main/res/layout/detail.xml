<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fir"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_gravity="right"
        android:layout_weight="2"
        android:background="#55848181"
        android:gravity="center">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:src="@mipmap/devondale"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/back" />

        <ImageButton
            android:id="@+id/star"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/empty_star" />

        <TextView
            android:id="@+id/nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="hello_world"
            android:textColor="#000000"
            android:textSize="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.52">

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="price"
            android:textColor="#D5000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/cate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:text="cate"
            android:textColor="#8A000000"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="5px"
            android:layout_height="80px"
            android:layout_marginRight="100dp"
            android:background="#1E000000"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/addshopcar"
            android:layout_marginEnd="17dp" />

        <ImageButton
            android:id="@+id/addshopcar"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_marginRight="30dp"
            android:background="@drawable/second"
            android:scaleType="fitXY"
            android:src="@mipmap/shoplist"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.59"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="360dp"
            android:layout_height="5px"
            android:layout_centerHorizontal="true"
            android:background="#1E000000" />

        <Button
            android:id="@+id/textView2"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:background="#ffffff"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:text="更多产品信息"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:background="#1E000000" />
    </RelativeLayout>

    <ListView
        android:id="@+id/function"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"></ListView>

</LinearLayout>